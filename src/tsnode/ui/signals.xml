<?xml version="1.0" encoding="UTF-8" ?>

<signals>

    <signal category="value.speed">
        <name>Tacho</name>
        <description>Geschwindigkeit des Autos</description>
        <minValue>0</minValue>
        <maxValue>220</maxValue> <!-- comment-->
        <widgets>
            <widget>gauge</widget>
            <widget>text widget</widget>
            <widget>line graph</widget>
        </widgets>

        <ticks>
            <major>12</major>
            <minor>5</minor>
        </ticks>

        <highlights>
            <highlight>
                <start>0</start>
                <end>50</end>
                <color>(0,0,0,0)</color>
            </highlight>
            <highlight>
                <start>50</start>
                <end>130</end>
                <color>(0,255,0,0.08)</color>
            </highlight>
            <highlight>
                <start>130</start>
                <end>220</end>
                <color>(255,0,0,0.08)</color>
            </highlight>
        </highlights>

        <unit>km/h</unit>
    </signal>
    <signal category="value.mass air flow">
        <name>MAF</name>
        <description>Luftmassenstrom</description>
        <minValue>0</minValue>
        <maxValue>300</maxValue>

        <widgets>
            <widget>gauge</widget>
            <widget>text widget</widget>
            <widget>line graph</widget>
        </widgets>
        <ticks>
            <major>4</major>
            <minor>2</minor>
        </ticks>
        <unit>gramm/sec</unit>
    </signal>
    <signal category="value.coolant temperature">
        <name>Kühlwasser</name>
        <description>Temperatur des Kühlers</description>
        <minValue>50</minValue>
        <maxValue>130</maxValue>

        <widgets>
            <widget>gauge</widget>
            <widget>text widget</widget>
            <widget>line graph</widget>
        </widgets>

        <ticks>
            <major>3</major>
            <minor>2</minor>
        </ticks>

        <unit>°C</unit>
    </signal>
    <signal category="value.fuel pressure">
        <name>Treib.-druck</name>
        <description>Treibstoffdruck in bar</description>
        <minValue>0</minValue>
        <maxValue>10</maxValue>

        <widgets>
            <widget>gauge</widget>
            <widget>text widget</widget>
            <widget>line graph</widget>
        </widgets>

        <unit>bar</unit>
    </signal>
    <signal category="value.RPM">
        <name>Drehzahl</name>
        <description>Motordrehzahl in RPM</description>
        <minValue>0</minValue>
        <maxValue>8000</maxValue>
        <ticks>
            <major>9</major>
            <minor>15</minor>
        </ticks>
        <highlights>
            <highlight>
                <start>0</start>
                <end>5000</end>
                <color>(0,255,0,0.05)</color>
            </highlight>
            <highlight>
                <start>5000</start>
                <end>8000</end>
                <color>(255,0,0,0.3)</color>
            </highlight>
        </highlights>

        <widgets>
            <widget>gauge</widget>
            <widget>text widget</widget>
            <widget>line graph</widget>
        </widgets>

        <unit>RPM</unit>
    </signal>
    <signal category="value.steering">
        <name>Lenkung</name>
        <description>Lenkungswinkel in Grad</description>
        <minValue>-30</minValue>
        <maxValue>30</maxValue>
